{
    "manifest_version": 3,
    "name": "PolyView",
    "version": "1.0",
    "description": "Removes height restrictions on Polymarket elements, making all bets immediately visible.",
    "content_scripts": [
      {
        "matches": ["https://polymarket.com/*"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }